@using WatchesApp.Web.Models
@*
@model IEnumerable<Watch>
    *@
@model (IEnumerable<Watch> watches, IEnumerable<Category> categoryService)

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Watches</title>
</head>
<body>
    <div class="container-fluid p-5 bg-primary text-white text-center">
        <h1 class="text-capitalize">Watches from around the world.</h1>
        <p>A limited selection of watches!</p>
    </div>
    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container">
            <ul class="breadcrumb">
                <li class="breadcrumb-item text-capitalize active">List all watches</li>
                <li class="breadcrumb-item text-capitalize"><a href="/create">Add a watch</a></li>
                <li class="breadcrumb-item text-capitalize"><a href="#">Italy</a></li>
            </ul>
        </div>
    </nav>
    <div class="container text-center">
        <div class="row">
            @foreach(var watch in Model.watches) {

                <div class="col-sm-4">
                    <img src="@watch.ImageUrl" class="img-responsive media-object" style="width:300px; height:300px; object-fit: cover" alt="@watch.Model" />
                    <dl class="dl-horizontal">
                        <dt>@watch.Brand</dt>
                        <dd>@watch.Model</dd>
                        <dt>Year</dt>
                        <dd>@watch.ReleaseYear</dd>
                        <dt>Price</dt>
                        <dd>- @watch.Price.ToString("C")</dd>
                        <dt>Description</dt>
                        <dd class="bg-info">@watch.Description</dd>
                        <dt>Category</dt>
                        <dd>@Model.categoryService.FirstOrDefault(c => c.Id == watch.Category)?.Name;</dd>
                        <dd class="bg-warning">@Model.categoryService.FirstOrDefault(c => c.Id == watch.Category)?.Description;</dd>
                    </dl>
                </div>
            }
        </div>
    </div>

    <footer class="container-fluid bg-primary mt-5 p-5 text-center text-white">
        <span>Copyright &copy;2023 Clive Leddy</span>
    </footer>
</body>
</html>
