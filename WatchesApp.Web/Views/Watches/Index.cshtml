@using WatchesApp.Web.Models
@model IEnumerable<Watch>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
!
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Watches</title>
</head>
<body>
    <div class="container-fluid p-5 bg-primary text-white text-center">
        <h1>Watches from around the world.</h1>
        <p>A limited selection of watches!</p>
    </div>
    <div class="container text-center">
        <div class="row">
            @foreach(var watch in Model) {

                <div class="col-sm-4">
                    <dl>
                        <dt>@watch.Brand</dt>
                        <dd>@watch.Model</dd>
                        <dt>Year</dt>
                        <dd>@watch.ReleaseYear</dd>
                        <dt>Price</dt>
                        <dd>- @watch.Price.ToString("C")</dd>
                        <dt>Description</dt>
                        <dd>@watch.Description</dd>
                        <dt>Category</dt>
                        <dd>@watch.Category.Name</dd>
                        <dd>@watch.Category.Description</dd>
                    </dl>
                    <img src="@watch.ImageUrl" class="img-responsive mb-2" style="width:100%" alt="@watch.Model" />

                </div>
            }
        </div>
    </div>
    <footer class="container-fluid bg-primary p-5 text-center text-white">
        <span>Copyright &copy;2023 Clive Leddy</span>
    </footer>
</body>
</html>
