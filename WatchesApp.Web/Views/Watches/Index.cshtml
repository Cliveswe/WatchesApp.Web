@model (IEnumerable<Watch> watches, IEnumerable<Category> categoryService)


@{
    Layout = "_Layout";
    @* Inject HTML code into the layout razor.*@
    ViewBag.IndexActive = "active";
    ViewBag.IndexLink = "List all watches";
    ViewBag.CreateActive = "";
    ViewBag.CreateLink = "<a href=\"/create\">Add a watch</a>";
}
<div class="container text-center">
    <div class="row">
        @foreach(var watch in Model.watches) {

            <div class="col-sm-4 mt-3">

                <div class="card">
                    <div class="card-body">

                        <img src="@watch.ImageUrl" class="img-responsive media-object" style="width:300px; height:300px; object-fit: cover" alt="@watch.Model" />
                        <dl class="dl-horizontal">
                            <dt>@watch.Brand</dt>
                            <dd>@watch.Model</dd>
                            <dt>Year</dt>
                            <dd>@watch.ReleaseYear</dd>
                            <dt>Price</dt>
                            <dd>- @watch.Price.ToString("C")</dd>
                            <dt>Description</dt>
                            <dd class="bg-info">@watch.Description</dd>
                            <dt>Category</dt>
                            <dd>@Model.categoryService.FirstOrDefault(c => c.Id == watch.Category)?.Name</dd>
                            <dd class="bg-warning">@Model.categoryService.FirstOrDefault(c => c.Id == watch.Category)?.Description</dd>
                        </dl>
                    </div>
                </div>
            </div>
        }
    </div>
</div>