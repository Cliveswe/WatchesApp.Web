@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using WatchesApp.Web.Models
@model Watch


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Add a new watch.</title>
</head>
<body>
    <div class="container-fluid p-5 bg-primary text-white text-center">
        <h1 class="text-capitalize">Watches from around the world.</h1>
        <p>A limited selection of watches!</p>
    </div>
    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container">
            <ul class="breadcrumb">
                <li class="breadcrumb-item text-capitalize"><a href="/">List all watches</a></li>
                <li class="breadcrumb-item text-capitalize active">Add new watch</li>
                <li class="breadcrumb-item text-capitalize"><a href="#">Italy</a></li>
            </ul>
        </div>
    </nav>

    <div class="container text-center">

        <form asp-controller="Watch" asp-action="Create" method="post">
            <div class="row">
                <div class="col-md-6">
                    <input asp-for="Brand" class="form-control mt-3" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <input asp-for="Model" class="form-control mt-3" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-3">
                    <input asp-for="Price" class="form-control mt-3" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="IsAvailable" class="mt-4"></label>
                    <input asp-for="IsAvailable" class="mt-4" />
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    @{
                        var categories = ViewBag.Categories as List<Category>;
                    }
                    <select asp-for="Category" asp-items="@(new SelectList(categories, "Id", "Name"))" class="mt-4"></select>
                </div>

                <div class="col-md-3">
                    <input asp-for="ReleaseYear" class="form-control mt-3" />
                    <span asp-validation-for="ReleaseYear"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <input asp-for="ImageUrl" class="form-control mt-3" />
                    <span asp-validation-for="ImageUrl"></span>
                </div>
                <div class="col-md-6">
                    <textarea asp-for="Description" class="form-control mt-3"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <br />

            <input type="submit" value="Save" />
        </form>
        <div asp-validation-summary="All"></div>
    </div>


    <footer class="container-fluid bg-primary mt-5 p-5 text-center text-white">
        <span>Copyright &copy;2023 Clive Leddy</span>
    </footer>
</body>
</html>