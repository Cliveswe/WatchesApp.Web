@model Watch

@{
    @* Inject HTML code into the layout razor.*@
    ViewBag.IndexActive = "";
    ViewBag.IndexLink = $"<a href=\"{Url.Action("Index", "Watches")}\">List all watches</a>";
    ViewBag.CreateActive = "active";
    ViewBag.CreateLink = "Add new watch";
}

<div class="container text-center">

    <form asp-controller="Watch" asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6">

                <input asp-for="Brand" class="form-control mt-3" />
                <span asp-validation-for="Brand" class="text-danger"></span>

            </div>
            <div class="col-md-6">

                <input asp-for="Model" class="form-control mt-3" />
                <span asp-validation-for="Model" class="text-danger"></span>

            </div>

        </div>
        <br />
        <div class="row">
            <div class="col-md-3">

                <input asp-for="Price" class="form-control mt-3" />
                <span asp-validation-for="Price" class="text-danger"></span>

            </div>
            <div class="col-md-3 d-flex mt-auto align-self-start">
                <div class="form-check">

                    <input asp-for="IsAvailable" class="form-check-input " />
                    <label asp-for="IsAvailable" class="form-check-label "></label>

                </div>
            </div>
            <div class="col-md-3 d-flex mt-auto align-self-start">
                @{
                    var categories = ViewBag.Categories as List<Category>;
                }
                <select asp-for="Category" asp-items="@(new SelectList(categories, "Id", "Name"))" class="mt-4"></select>
            </div>
            <div class="col-md-3">
                @*<input asp-for="ReleaseYear" class="form-control mt-3" />
                    <span asp-validation-for="ReleaseYear"></span>
                    *@
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                <select asp-for="ReleaseYear" class="form-control"
                        asp-items="@(new SelectList(Enumerable.Range(1900, DateTime.Now.Year - 1899).Reverse()))">
                    <option value="">-- Select Year --</option>
                </select>

            </div>

        </div>
        <div class="row">
            <div class="col-md-6">

                <input asp-for="ImageUrl" class="form-control mt-3" />
                <span asp-validation-for="ImageUrl"></span>

            </div>
            <div class="col-md-6">

                <textarea asp-for="Description" class="form-control mt-3"></textarea>
                <span asp-validation-for="Description"></span>

            </div>
        </div>
        <br />

        <input type="submit" value="Save" class="btn btn-primary" />
        <br />

        <div class="d-flex justify-content-left">

            <div asp-validation-summary="All" class="text-danger text-start"></div>
        </div>

    </form>
    <hr />
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1.min.js"
            asp-fallback-src="/scripts/lib/jquery/jquery.min.js"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate.min.js"
            asp-fallback-src="/scripts/lib/jquery-validate/jquery.validate.min.js"></script>

    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"
            asp-fallback-src="/scripts/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}