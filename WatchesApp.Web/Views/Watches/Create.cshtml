@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using WatchesApp.Web.Models
@model (IEnumerable<Watch> watches, IEnumerable<Category> categories)


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Add a new watch.</title>
</head>
<body>
    <div class="container-fluid p-5 bg-primary text-white text-center">
        <h1 class="text-capitalize">Watches from around the world.</h1>
        <p>A limited selection of watches!</p>
    </div>
    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container">
            <ul class="breadcrumb">
                <li class="breadcrumb-item text-capitalize"><a href="/">List all watches</a></li>
                <li class="breadcrumb-item text-capitalize active">Add new watch</li>
                <li class="breadcrumb-item text-capitalize"><a href="#">Italy</a></li>
            </ul>
        </div>
    </nav>

    <div class="container text-center">
        <div class="row">
            <form asp-controller="Watch" asp-action="Create" method="post">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" />
                <span asp-validation-for="Brand"></span>

                <label asp-for="Model"></label>
                <input asp-for="Model" />
                <span asp-validation-for="Model"></span>
                <br />
                <input type="submit" value="Save" />
            </form>
            <div asp-validation-summary="All"></div>
        </div>

    </div>

    <footer class="container-fluid bg-primary mt-5 p-5 text-center text-white">
        <span>Copyright &copy;2023 Clive Leddy</span>
    </footer>
</body>
</html>