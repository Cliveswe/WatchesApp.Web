@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using WatchesApp.Web.Models
@model Watch


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Add a new watch.</title>
</head>
<body>
    <div class="container-fluid p-5 bg-primary text-white text-center">
        <h1 class="text-capitalize">Watches from around the world.</h1>
        <p>A limited selection of watches!</p>
    </div>
    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container">
            <ul class="breadcrumb">
                <li class="breadcrumb-item text-capitalize"><a href="/">List all watches</a></li>
                <li class="breadcrumb-item text-capitalize active">Add new watch</li>
                <li class="breadcrumb-item text-capitalize"><a href="#">Italy</a></li>
            </ul>
        </div>
    </nav>

    <div class="container text-center">
        <div class="row">
            <form asp-controller="Watch" asp-action="Create" method="post">
                <input asp-for="Brand" class="form-control mt-3" />
                <span asp-validation-for="Brand"></span>

                <input asp-for="Model" class="form-control mt-3" />
                <span asp-validation-for="Model"></span>
                <br />

                <input asp-for="Price" class="form-control mt-3" />
                <span asp-validation-for="Price"></span>
                
                <label asp-for="IsAvailable"></label>
                <input asp-for="IsAvailable" />
                <span asp-validation-for="IsAvailable"></span>

                @{
                    var categories = ViewBag.Categories as List<Category>;
                }
                <select asp-for="Category" asp-items="@(new SelectList(categories, "Id", "Name"))"></select>

                <br />

                <input asp-for="ReleaseYear" class="form-control mt-3" />
                <span asp-validation-for="ReleaseYear"></span>
                
                <input asp-for="ImageUrl" class="form-control mt-3" />
                <span asp-validation-for="ImageUrl"></span>
                <br />
                
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description"></span>
              
                <br/>

                <input type="submit" value="Save" />
            </form>
            <div asp-validation-summary="All"></div>
        </div>

    </div>

    <footer class="container-fluid bg-primary mt-5 p-5 text-center text-white">
        <span>Copyright &copy;2023 Clive Leddy</span>
    </footer>
</body>
</html>