@*// -----------------------------------------------------------------------------
// File: _Layout.cshtml
// Summary: Main layout page setting up the overall HTML structure with Bootstrap 5,
//          including responsive header, breadcrumb navigation, dynamic content area,
//          and footer. Supports optional styles and scripts injection via sections.
// <author> [Clive Leddy] </author>
// <created> [2025-05-23] </created>
// Notes: Uses ViewBag for dynamic page titles and navigation active states.
//        Breadcrumb links are injected as raw HTML via ViewBag properties.
// -----------------------------------------------------------------------------*@

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <title>@ViewBag.Title</title>
    @* This method tells the Razor view engine to look for a named section in the page that uses this layout.
        "required: false:" This means the section is optional. If a view does not define this section, no error will be thrown.
    *@
    @RenderSection("Styles", required: false)
</head>

<body>

    <div class="container-fluid p-5 bg-primary text-white text-center">

        <h1 class="text-capitalize">About time from around the world.</h1>
        <p>A selection of watches!</p>

    </div>

    <nav class="navbar navbar-expand-sm bg-light" role="navigation" aria-label="Primary">
        <div class="container">

            <ul class="breadcrumb">
                <!-- Note: the one needs to use Html.Raw to inject HTML into the Razor via ViewBag -->
                <li class="breadcrumb-item text-capitalize @ViewBag.IndexActive">
                    @Html.Raw(@ViewBag.IndexLink)</li>
                <li class="breadcrumb-item text-capitalize @ViewBag.CreateActive">
                    @Html.Raw(@ViewBag.CreateLink)</li>
            </ul>

        </div>
    </nav>

    <div>

        @RenderBody()
    </div>

    <footer class="container-fluid bg-primary mt-5 p-5 text-center text-white" role="contentinfo">
        <span class="text-capitalize">About time from around the world.</span>
        <br />
        <span>Copyright &copy; 2025 Clive Leddy, Umeå</span>

    </footer>

    <!-- Render section to include scripts. -->
    @RenderSection("scripts", false)
</body>
</html>