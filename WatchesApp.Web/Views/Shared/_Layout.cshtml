<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="stylesheet" href="~/css/style.css" />*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewBag.Title</title>
    @RenderSection("Styles", required: false)
</head>

<body>

    <div class="container-fluid p-5 bg-primary text-white text-center">

        <h1 class="text-capitalize">About time from around the world.</h1>
        <p>A selection of watches!</p>

    </div>

    <nav class="navbar navbar-expand-sm bg-light">
        <div class="container">

            <ul class="breadcrumb">
                <!-- Note: the one needs to use Html.Raw to inject HTML into the Razor via ViewBag -->
                <li class="breadcrumb-item text-capitalize @ViewBag.IndexActive">@Html.Raw(@ViewBag.IndexLink)</li>
                <li class="breadcrumb-item text-capitalize @ViewBag.CreateActive">@Html.Raw(@ViewBag.CreateLink)</li>
            </ul>

        </div>
    </nav>

    <div>

        @RenderBody()
    </div>

    <footer class="container-fluid bg-primary mt-5 p-5 text-center text-white">
        <span class="text-capitalize">About time from around the world.</span>
        <br />
        <span>Copyright &copy; 2025 Clive Leddy, Umeå</span>

    </footer>

    <!-- Render section to include scripts. -->
    @RenderSection("scripts", false)
</body>
</html>